name        = DrupalCamp Austin
description = Custom theme for DrupalCamp Austin 2009
screenshot  = drupalcampaustin-preview.png
core        = 6.x
engine      = phptemplate

; Remove core and contrib stylesheets
stylesheets[all][] = user.css
stylesheets[all][] = content_profile.css

; Stylesheets
stylesheets[all][] = styles/reset.css
stylesheets[all][] = styles/grid.css
stylesheets[all][] = styles/style.css
stylesheets[all][] = styles/user.css
stylesheets[all][] = styles/content_profile.css
stylesheets[all][] = styles/session-vote.css

; Stylesheets: Print
; stylesheets[print][] = styles/style-print.css

; Scripts
scripts[] = js/Three.js
scripts[] = js/Bird.js
scripts[] = js/Stats.js
scripts[] = js/Bats.js
scripts[] = js/Clouds.js
scripts[] = js/main.js

; Regions
regions[sidebar_1]     = "Sidebar 1"
regions[sidebar_2]     = "Sidebar 2"
regions[content]       = "Content"
regions[user_menu]     = "User Menu"
regions[header]        = "Header"

; Features (enabled)
features[] = name
features[] = slogan
features[] = favicon
features[] = primary_links

; Features (disabled)
; features[] = breadcrumb
; features[] = search
; features[] = node_user_picture
; features[] = comment_user_picture
; features[] = secondary_links

; Set directory where custom Panels layouts are located
plugins[panels][layouts] = panels_layouts
